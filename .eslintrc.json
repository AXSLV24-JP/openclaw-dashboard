{
  "env": {
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "warn"
  },
  "overrides": [
    {
      "files": ["dashboard.js"],
      "env": {
        "browser": true,
        "node": false
      }
    },
    {
      "files": ["test/**/*.js"],
      "env": {
        "node": true
      }
    }
  ]
}
